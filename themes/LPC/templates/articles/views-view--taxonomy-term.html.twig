{%
  set classes = [
    'articles-blc',
    'row',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<section class="articles articles-page">
  <div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if rows %}
      {{ rows }}
    {% elseif empty %}
      {{ empty }}
    {% endif %}
    {% if pager %}
      <div class="mt-5">
        {{ pager }}
      </div>
    {% endif %}
  </div>
</section>